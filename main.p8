function _init()
	-- music(0)

	-- tile spawn probability
	for k,tile in pairs(tiles) do
		for i=1,tile.p do
			-- print(tile.name)
			add(probs, tile)
		end
	end

	-- print(#probs)
	for x=1,8 do
		add(world, {})
		for y=1,8 do
			-- 75% chance to spawn an item
			if (rnd(1) < 0.60) then
				add(world[x], { t=probs[flr(rnd(#probs))+1] })
			-- else just grass
			else
					add(world[x], { t=grass[flr(rnd(#grass))+1] })
			end
		end
 end

end


function _update()
	-- left
	if (btn(0)) then
		c.x = c.x-1
	end
	-- right
	if (btn(1)) then
		c.x = c.x+1
	end
	-- up
	if (btn(2)) then
		c.y = c.y-1
	end
	-- down
	if (btn(3)) then
		c.y = c.y+1
	end

	if c.x<1 then c.x=1 end
	if c.x>8 then c.x=8 end
	if c.y<1 then c.y=1 end
	if c.y>8 then c.y=8 end

	-- z
	if (btn(4)) then
		sfx(3)
	end
	-- x
	if (btn(5)) then
		sfx(0)
	end
end


function _draw()
	cls()
 for x=1,8 do
		for y=1,7 do
			s=world[x][y].t.s

			tx=x-1
			ty=y-1

			sx=(s%32)*8
			sy=flr(s/32)*16

			sspr(sx,sy,16,16,
				tx*16,ty*16)

		end
 end

	cx = c.x-1
	cy = c.y-1
	rect(cx*16,cy*16,cx*16+15,cy*16+15,15)
end

