function rnd_item()
	-- print(rnd(#items))
	return items[flr(rnd(#items))+1]
end

function _init()
	for x=1,8 do
		add(world, {})
		for y=1,8 do
			item=rnd_item()
			-- print(item.name)
			add(world[x], {
				t=item,
				c=rnd(15)+1}
			)
		end
 end
end


function _update()
	-- left
	if (btn(0)) then
		c.x = c.x-1
	end
	-- right
	if (btn(1)) then
		c.x = c.x+1
	end
	-- up
	if (btn(2)) then
		c.y = c.y-1
	end
	-- down
	if (btn(3)) then
		c.y = c.y+1
	end

	if c.x<1 then c.x=1 end
	if c.x>8 then c.x=8 end
	if c.y<1 then c.y=1 end
	if c.y>8 then c.y=8 end

