	end
end


function _draw()
	cls()
 for x=1,8 do
		for y=1,8 do
			tx=x-1
			ty=y-1
			-- rect(tx*16,ty*16,tx*16+15,ty*16+15,world[x][y].c)

			spr(world[x][y].t.s,tx*16,ty*16)
			spr(world[x][y].t.s+1,(tx+1)*16,ty*16)

		end
 end

	cx = c.x-1
	cy = c.y-1
	rectfill(cx*16,cy*16,cx*16+15,cy*16+15,world[c.x][c.y].c)
end

